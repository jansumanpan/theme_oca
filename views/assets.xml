<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="assets_editor" inherit_id="website.assets_editor" name="theme_oca assets editor">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/theme_oca/static/src/js/snippet_option.js"/>
            </xpath>
        </template>

        <template id="asset_frontend" inherit_id="website.assets_frontend" name="assets frontend">
            <xpath expr="." position="inside">

                    <!-- Libraries -->
                    <link rel="stylesheet" href="/theme_oca/static/src/css/owl.carousel.min.css"/>
                    <link rel="stylesheet" href="/theme_oca/static/src/css/theme_oca.css" type="text/css"/>
                    <link href="/theme_oca/static/src/css/animate.min.css" rel="stylesheet"/>
                    <link href="/theme_oca/static/src/css/bootstrap-dropdownhover.min.css" rel="stylesheet"/>
                    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet"/>
                    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet"/>


                    <script type="text/javascript" src="/theme_oca/static/src/js/owl.carousel.min.js"></script>
                    <script src="/theme_oca/static/src/js/bootstrap-dropdownhover.min.js" type="text/javascript" />
                    <script src="/theme_oca/static/src/js/custom.js" type="text/javascript"/>
                    <script src="/theme_oca/static/src/js/snippet_frontend.js" type="text/javascript"/>
            </xpath>
        </template>

    </data>
</openerp>