		<template id="oca_banner_snippets" inherit_id="website.snippets" name="Oca Banner Snippets">
			<xpath expr="//div[@id='snippet_structure']">
				<div>
					<div class="oe_snippet_thumbnail">
						<img src="/theme_oca/static/src/img/snippet/product-category-slider.png" class="oe_snippet_thumbnail_img"/>
						<span class="oe_snippet_thumbnail_title">
							Oca Banner Snippet
						</span>
					</div>
					<section class="oca-banner" style="height: 480px; overflow: hidden;">
				        <div class="container">
				        	<div class="row content">
				        		<div class="col-md-3 content">

				        		</div>
				        		<div class="col-md-9" style="padding: 0px;">
				        			<div class="carousel slide" id="myCarousel4" style="height: 480px; overflow: hidden;">
				        				<ol class="carousel-indicators">
