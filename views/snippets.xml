<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>

			<template id="custom_css_and_js" inherit_id="website.assets_frontend" name="Custom CSS and JS">

				<xpath expr="." position="inside">
					<link href="/theme_oca/static/src/css/owl.carousel.min.css" rel="stylesheet"/>
					<link href="/theme_oca/static/src/css/website.override.css" rel="stylesheet"/>
					<script type="text/javascript" src="/theme_oca/static/src/js/owl.carousel.min.js"/>
			       <script type="text/javascript" src="/theme_oca/static/src/js/snippet_frontend.js"/>
			       
			    </xpath>

			</template>

			<template id="custom_css_and_js_editor" inherit_id="website.assets_editor" name="Custom CSS and JS Editor">

			    <xpath expr="//link[last()]" position="after">

			        <!-- your custom css goes here -->

			    </xpath>

			    <xpath expr="//script[last()]" position="after">

			       
				<script type="text/javascript" src="/theme_oca/static/src/js/snippet_option.js"/>
				<script type="text/javascript" src="/theme_oca/static/src/js/website_menu_override.js"/>
			    </xpath>

			</template>

			

			<template id="t_oca_snippets" name="Oca Slider">
				<section class="oca_snip" style="background-color:#f7f7f7;" data-multi-cat-slider-type="" contentEditable="false">
							<div class="container">
				                <div class="row our-categories">
				                    <div class="col-md-12">
				                        <div class="title-block">
				                            <h4 id="snippet-title" class="section-title style1"><span>Slider</span></h4>
				                        </div>
				                    </div>
				                </div>
				            </div>
				</section>
			</template>
				

			<template id="oca_snippet_slider_options" inherit_id="website.snippet_options" name="Modify Options">
				<xpath expr="//div" position="after">
			    <div data-js="oca_snippet_option" data-selector=".oca_snip" data-snippet-option-id="oca_snippet_option">
	                <li data-multi_category_slider="">
	                    <a class=".oca_snip">Modify</a>
	                </li>
            	</div>
			  </xpath>

			</template>
			<template id="oca_snippets" name="oca snippet" inherit_id="website.snippets">
			  <xpath expr="//div[@id='snippet_structure']" position="inside">
					<!-- Cannot call T-tags Except T-Field, Call Template using JS -->
					<!-- div>

						<div class="oe_snippet_thumbnail">
							<img class="oe_snippet_thumbnail_img" src="theme_oca/static/src/img/thumbnail.png" alt=""/>
							<span class="oe_snippet_thumbnail_title">
							 Product Slider
							</span>
						</div>

						
					</div> -->
					 <t t-snippet="theme_oca.t_oca_snippets" t-thumbnail="/theme_oca/static/src/img/thumbnail.png"/>
			  </xpath>

			  

			</template>

			<template id="display_categories">
				<div class="container" style="overflow:hidden">
				                <div class="title-block">
					                <h4 class="section-title style1" t-if="not slider_header">
					                    <span>No Display</span>
					                </h4>
					                <h4 class="section-title style1" t-if="slider_header">
					                    <span>
					                        <t t-esc="slider_header.name"/>
					                    </span>
					                </h4>
					                <!-- <hr/> -->
					            </div>
					            <div class="lns-inner latest-news-section">
				                	<div class="row">
				                    	<div class="lns-post">
					                         <div class="psb-inner">
					                         	<div class="tab-header col-md-2 col-sm-2" t-attf-style="padding-bottom: 1000px;margin-bottom: -1000px;padding-right:0px;padding-left:0px;background-color:#{slider_header.color};">
					                         		 <ul id="multi_dynamic_slider_tabs" class="nav">

						                                <t t-foreach="slider_categ_ids" t-as="slider_categ_id">
						                                    <li class="active my-test">
						                                        <a href="#multi-collection1" data-toggle="tab" t-attf-data-id="#{slider_categ_id.id}">
						                                            <t t-esc='slider_categ_id.name'/>
						                                        </a>
						                                    </li>
						                                </t>
					                            	</ul>
					                         	</div>
					                           
					                            <div class="tab-content col-md-10 col-sm-10" style="padding-left:0px">
					                            	<div class="multi_hide" id="multi-collection1">
						                                        <div class="owl-carousel">
						                                        </div>
						                            </div>
					                            </div>
					                            
					                         </div>
				                       	</div>
				                     </div>
				                 </div>
				</div>
				

			</template>

			<template id="display_products">
												
						                                <t t-if="products">
						                                    
						                                            <t t-foreach="products" t-as="product">
						                                                <div class="cs-product">
						                                                    <div class="pwp-img">
						                                                        <!-- <div t-if="product and product.product_style_tag_id" t-att-class="'%s' % product.product_style_tag_id.color if product and product.product_style_tag_id else ''">
						                                                            <t t-esc="product.product_style_tag_id.name"/>
						                                                        </div> -->
						                                                        <a t-att-href="'/shop/product/%s' % slug(product)">
						                                                            <img class="front" t-att-alt="product.name" t-att-title="product.name" t-att-src="website.image_url(product, 'image')"/>
						                                                        </a>
						                                                    </div>
						                                                    <!-- <div class="pink-box">

						                                                        <div class="view">
						                                                            <div class="shopping-cart">
						                                                                <a t-attf-href="/shop/product/#{ slug(product) }">
						                                                                    <img src="/kingfisher_pro/static/src/img/cart2.png" alt="Shopping-cart" title="Shopping Cart" />
						                                                                </a>
						                                                            </div>
						                                                        </div>
						                                                    </div> -->
						                                                    <div class="pwp-info">
						                                                        <p class="pwpi-title">
						                                                            <a t-attf-href="/shop/product/#{ slug(product) }">
						                                                                <span t-field='product.name'/>
						                                                            </a>
						                                                        </p>
						                                                        <p class="price">
						                                                            <span class="price">
						                                                                <span t-field="product.lst_price"
						                                                                      t-field-options='{
						                                                                         "widget": "monetary",
						                                                                         "display_currency": "website.pricelist_id.currency_id"
						                                                                }'></span>
						                                                            </span>
						                                                        </p>
						                                                    </div>
						                                                </div>
						                                            </t>
						                                      
						                                </t>

			</template>

	</data>
</openerp>
