		<!-- Oca Carousel Snippet Ending -->

		<!-- Three Image Snippet -->
		<template id="oca_three_image_snippets" inherit_id="website.snippets" name="Oca three image snippets">
			<xpath expr="//div[@id='snippet_structure']">
				<div>
					<div class="oe_snippet_thumbnail">
						<img src="https://ortopg.com/pub/media/wysiwyg/m2themes/h2_slider2.jpg"
	                     class="oe_snippet_thumbnail_img"/>
	                    <span class="oe_snippet_thumbnail_title">
	                    	Oca Image Snippet
	                    </span>
	                </div>
	                 <section class="three_image_snippet oe_snippet_body">
	                 	<div class="container" style="padding: 0px;">
	                 		<div class="row">
	                 			<div class="col-md-4">
	                 				<a href="#">
	                 					<img src="http://via.placeholder.com/350x195"/>
	                 				</a>
	                 			</div>
	                 			<div class="col-md-4">
	                 				<a href="#">
	                 					<img src="http://via.placeholder.com/350x195"/>
	                 				</a>
	                 			</div>
	                 			<div class="col-md-4">
	                 				<a href="#">
	                 					<img src="http://via.placeholder.com/350x195" />
	                 				</a>
	                 			</div>
	                 		</div>
	                 	</div>
	                 </section>
	            </div>
		    </xpath>
		</template>
		<!-- Three Image Snippet Ending -->

		<!-- Oca Slider Snippet Starting -->
		<template id="t_oca_snippets" name="Oca Slider">
			<section class="oca_snip" data-multi-cat-slider-type="" contentEditable="false">
				<div class="container">
					<div class="row our-categories">
						<div class="col-md-12">
							<div class="title-block">
								<h4 id="snippet-title" class="section-title style1"><span>Slider</span></h4>
							</div>
						</div>
					</div>
				</div>
			</section>
		</template>

		<template id="oca_snippets" name="oca snippet" inherit_id="website.snippets">
			<xpath expr="//div[@id='snippet_structure']" position="inside">
				<t t-snippet="theme_oca.t_oca_snippets" t-thumbnail="/theme_oca/static/src/img/thumbnail.png"/>
			</xpath>
		</template>

		<template id="oca_snippet_slider_options" inherit_id="website.snippet_options" name="Modify Options">
			<xpath expr="//div" position="after">
				<div data-js="oca_snippet_option" data-selector=".oca_snip" data-snippet-option-id="oca_snippet_option">
					<li data-multi_category_slider="">
						<a class=".oca_snip">Modify</a>
					</li>
				</div>
			</xpath>
		</template>
		<!-- Oca Slider Snippet Ending -->

		<!-- Oca Multi Slider Starting -->
		<template id="t_oca_multi_slider_snippets" name="Oca Multi Slider">
			<section class="oca_multi_snip" contentEditable="false" data-multi-tab-slider-type="">
				<div class="container">
					<div class="row multi-slider-tabs">
						<div class="col-md-12">
							<div class="title-block">
								<h4 id="snippet-title" class="section-title"><span>Multi Slider Product Slider and Deals</span></h4>
							</div>
						</div>
					</div>
				</div>
			</section>
		</template>

		<template id="oca_multi_slider_snippets" name="Oca Multi Slider Snippet" inherit_id="website.snippets">
			<xpath expr="//div[@id='snippet_structure']" position="inside">
				<t t-snippet="theme_oca.t_oca_multi_slider_snippets" t-thumbnail="/theme_oca/static/src/img/snippet/promo-snippet.png"/>
			</xpath>
		</template>

		<template id="oca_multi_slider_options" inherit_id="website.snippet_options" name="Modify Options">
			<xpath expr="//div" position="after">
				<div data-js="oca_multi_snippet_option" data-selector=".oca_multi_snip" data-snippet-option-id="oca_multi_snippet_option">
					<li data-multi_tab_slider="">
						<a class="oca_multi_snip">Modify</a>
					</li>
				</div>
			</xpath>
		</template>

		<!-- Oca Multi Slider Ending -->
		
		<!-- CONTROLLERS STARTING OR VIEWS TO BE CALLED -->
		<template id="multi_slider_tabs">
			<div class="container" style="overflow: hidden;">
				<div class="title-block">
					<h4 class="section-title" t-if="not multi_slider_header">
						<span>No Display</span>
					</h4>
					<h4 class="section-title" t-if="multi_slider_header">
						<span>
							<t t-esc="multi_slider_header.name"/>
						</span>
					</h4>
				</div>
				<div class="tabs-inner">
					<ul class="nav nav-tabs">
						<t t-foreach="multi_slider_tab_ids" t-as="tabs">
							<li class="my-tabs">
								<a t-attf-href="##{tabs.id}" t-attf-data-id="#{tabs.id}" data-toggle="tab">
									<t t-esc="tabs.tab_name"/>
								</a>
							</li>
						</t>
					</ul>
					<div class="tab-content">
						<t t-foreach="multi_slider_tab_ids" t-as="tabs">
							<div t-attf-id="#{tabs.id}" class="tab-pane fade">
								<div class="multi-prod-slider">
									<!-- <t t-foreach="multi_slider_tab_ids" t-as="products">
										<div><t t-esc="products.line_id.product_template_id"/></div>
									</t> -->
								</div>
							</div>
						</t>
					</div>
				</div>
			</div>
		</template>


		<template id="display_categories">
			<div class="container" style="overflow:hidden;">
				<div class="title-block">
					<h4 class="section-title style1" t-if="not slider_header">
						<span>No Display</span>
					</h4>
					<h4 class="section-title style1" t-if="slider_header">
						<span>
							<t t-esc="slider_header.name"/>
						</span>
					</h4>
				</div>
				<div class="lns-inner latest-news-section">
					<div class="row">
						<div class="lns-post">
							<div class="psb-inner">
								<div class="tab-header col-md-2 col-sm-2" t-attf-style="padding-bottom: 1000px;margin-bottom: -1000px;padding-right:0px;padding-left:0px;background-color:#{slider_header.color};">
									<ul id="multi_dynamic_slider_tabs" class="nav">
										<t t-foreach="slider_categ_ids" t-as="slider_categ_id">
											<li class="active my-test">
												<a href="#multi-collection1" data-toggle="tab" t-attf-data-id="#{slider_categ_id.id}">
													<t t-esc='slider_categ_id.name'/>
												</a>
											</li>
										</t>
									</ul>
								</div>
								<div class="tab-content col-md-10 col-sm-10" style="padding-left:0px">
									<div class="multi_hide" id="multi-collection1">
										<div class="owl-carousel">
											
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</template>

		<template id="display_products">
			<t t-if="products">
				<t t-foreach="products" t-as="product">
					<div class="cs-product">
						<div class="pwp-img">
						<a t-att-href="'/shop/product/%s' % slug(product)">
							<img class="front" t-att-alt="product.name" t-att-title="product.name" t-att-src="website.image_url(product, 'image')"/>
						</a>
					</div>
					<div class="pwp-info">
						<p class="pwpi-title">
							<a t-attf-href="/shop/product/#{ slug(product) }">
								<span t-field='product.name'/>
							</a>
						</p>
						<p class="price">
							<span class="price">
								<span t-field="product.lst_price" t-field-options='{ "widget": "monetary", "display_currency": "website.pricelist_id.currency_id" }'>
									
								</span>
							</span>
						</p>
					</div>
				</div>
			</t>
		</t>
	</template>

    </data>
</openerp>
